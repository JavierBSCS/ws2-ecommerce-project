<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <style>
    body {
      margin: 0;
      padding: 40px;
      font-family: "Inter", Arial, sans-serif;
      background: linear-gradient(135deg, #0d1b2a, #1b263b, #415a77);
      color: #e5e9f0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }

    /* Back Button */
    .back-btn {
      position: absolute;
      top: 30px;
      left: 30px;
      color: white;
      padding: 10px 16px;
      border-radius: 10px;
      border: 1px solid rgba(255,255,255,0.25);
      backdrop-filter: blur(12px);
      text-decoration: none;
      font-size: 14px;
      transition: 0.25s ease;
    }

    .back-btn:hover {
      background: rgba(255,255,255,0.15);
      transform: scale(1.05);
    }

    .reset-container {
      width: 400px;
      margin-top: 60px;
      background: rgba(255, 255, 255, 0.08);
      padding: 30px;
      border-radius: 15px;
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 0 25px rgba(0,0,0,0.4);
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .title {
      text-align: center;
      font-size: 1.8rem;
      color: #4cc9f0;
      margin-bottom: 8px;
      text-shadow: 0 0 10px rgba(76, 201, 240, 0.4);
    }

    .subtitle {
      text-align: center;
      color: #a9bcd0;
      margin-bottom: 25px;
      font-size: 14px;
    }

    .form-group {
      margin-bottom: 18px;
    }

    label {
      font-size: 14px;
      color: #a9bcd0;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-top: 6px;
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.3);
      background: rgba(0,0,0,0.2);
      color: white;
      font-size: 15px;
      transition: 0.25s ease;
    }

    input:focus {
      border-color: #4cc9f0;
      box-shadow: 0 0 10px rgba(76, 201, 240, 0.6);
      outline: none;
    }

    .password-criteria p {
      margin: 3px 0;
      font-size: 13px;
      color: #ff6b6b;
    }

    .password-criteria p.valid {
      color: #4fe8b0;
    }

    #confirmStatus {
      margin-top: 5px;
      font-size: 13px;
    }

    #confirmStatus.valid {
      color: #4fe8b0;
    }

    #confirmStatus.invalid {
      color: #ff6b6b;
    }

    .btn {
      width: 100%;
      padding: 12px;
      background: #4cc9f0;
      color: #000;
      font-weight: bold;
      border-radius: 8px;
      cursor: pointer;
      border: none;
      transition: 0.25s ease;
      font-size: 16px;
      margin-top: 20px;
    }

    .btn:hover {
      background: #72e0ff;
      transform: scale(1.03);
    }

    /* Turnstile center + spacing */
    .cf-turnstile {
      margin-top: 10px;
      margin-bottom: 20px;
      display: flex;
      justify-content: center;
    }

    .home-link {
      margin-top: 15px;
      text-align: center;
      font-size: 14px;
    }

    .home-link a {
      color: #4cc9f0;
      text-decoration: none;
    }
  </style>
</head>

<body>

  <a href="/users/login" class="back-btn">‚¨Ö Back</a>

  <div class="reset-container">
    <h2 class="title">Reset Password</h2>
    <p class="subtitle">Enter your new password.</p>

    <form action="/password/reset/<%= token %>" method="POST">

      <div class="form-group">
        <label>New Password</label>
        <input type="password" id="password" name="password" required>

        <!-- Password Criteria -->
        <div class="password-criteria">
          <p id="length">‚óè At least 8 characters</p>
          <p id="uppercase">‚óè Uppercase letter</p>
          <p id="lowercase">‚óè Lowercase letter</p>
          <p id="number">‚óè Number</p>
          <p id="special">‚óè Special character (!@#$%^&*)</p>
        </div>
      </div>

      <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" id="confirm" name="confirm" required>
        <p id="confirmStatus"></p>
      </div>

      <div class="cf-turnstile" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>

      <button type="submit" class="btn">üîë Reset Password</button>
    </form>

    <p class="home-link">
      <a href="/users/login">Back to Login</a> | 
      <a href="/">Home</a>
    </p>

  </div>

  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <script>
    const pass = document.getElementById("password");
    const confirm = document.getElementById("confirm");
    const confirmStatus = document.getElementById("confirmStatus");

    const lengthC = document.getElementById("length");
    const upperC = document.getElementById("uppercase");
    const lowerC = document.getElementById("lowercase");
    const numberC = document.getElementById("number");
    const specialC = document.getElementById("special");

    pass.addEventListener("input", validatePassword);
    confirm.addEventListener("input", validateConfirm);

    function validatePassword() {
      const v = pass.value;

      lengthC.classList.toggle("valid", v.length >= 8);
      upperC.classList.toggle("valid", /[A-Z]/.test(v));
      lowerC.classList.toggle("valid", /[a-z]/.test(v));
      numberC.classList.toggle("valid", /[0-9]/.test(v));
      specialC.classList.toggle("valid", /[!@#$%^&*(),.?":{}|<>]/.test(v));
    }

    function validateConfirm() {
      if (!confirm.value) {
        confirmStatus.textContent = "";
        return;
      }

      if (confirm.value === pass.value) {
        confirmStatus.textContent = "Passwords match ‚úî";
        confirmStatus.className = "valid";
      } else {
        confirmStatus.textContent = "Passwords do not match ‚úñ";
        confirmStatus.className = "invalid";
      }
    }
  </script>

</body>
</html>
