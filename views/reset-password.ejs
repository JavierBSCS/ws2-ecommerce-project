<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
<link rel="stylesheet" href="/reset-password.css">


</head>

<body>

  <a href="/users/login" class="back-btn">‚¨Ö Back</a>

  <div class="reset-container">
    <h2 class="title">Reset Password</h2>
    <p class="subtitle">Enter your new password.</p>

    <form action="/password/reset/<%= token %>" method="POST">

      <div class="form-group">
        <label>New Password</label>
        <input type="password" id="password" name="password" required>

        <!-- Password Criteria -->
        <div class="password-criteria">
          <p id="length">‚óè At least 8 characters</p>
          <p id="uppercase">‚óè Uppercase letter</p>
          <p id="lowercase">‚óè Lowercase letter</p>
          <p id="number">‚óè Number</p>
          <p id="special">‚óè Special character (!@#$%^&*)</p>
        </div>
      </div>

      <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" id="confirm" name="confirm" required>
        <p id="confirmStatus"></p>
      </div>

      <div class="cf-turnstile" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>

      <button type="submit" class="btn">üîë Reset Password</button>
    </form>

    <p class="home-link">
      <a href="/users/login">Back to Login</a> | 
      <a href="/">Home</a>
    </p>

  </div>

  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <script>
    const pass = document.getElementById("password");
    const confirm = document.getElementById("confirm");
    const confirmStatus = document.getElementById("confirmStatus");

    const lengthC = document.getElementById("length");
    const upperC = document.getElementById("uppercase");
    const lowerC = document.getElementById("lowercase");
    const numberC = document.getElementById("number");
    const specialC = document.getElementById("special");

    pass.addEventListener("input", validatePassword);
    confirm.addEventListener("input", validateConfirm);

    function validatePassword() {
      const v = pass.value;

      lengthC.classList.toggle("valid", v.length >= 8);
      upperC.classList.toggle("valid", /[A-Z]/.test(v));
      lowerC.classList.toggle("valid", /[a-z]/.test(v));
      numberC.classList.toggle("valid", /[0-9]/.test(v));
      specialC.classList.toggle("valid", /[!@#$%^&*(),.?":{}|<>]/.test(v));
    }

    function validateConfirm() {
      if (!confirm.value) {
        confirmStatus.textContent = "";
        return;
      }

      if (confirm.value === pass.value) {
        confirmStatus.textContent = "Passwords match ‚úî";
        confirmStatus.className = "valid";
      } else {
        confirmStatus.textContent = "Passwords do not match ‚úñ";
        confirmStatus.className = "invalid";
      }
    }
  </script>

</body>
</html>
