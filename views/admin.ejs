<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/style.css">

  <style>
    /* --- FIX SCROLLING --- */
    body {
      height: auto !important;
      min-height: 100vh !important;
      display: block !important;       /* overrides login flex layout */
      overflow-y: auto !important;     /* enables scrolling */
      overflow-x: hidden;
      padding: 20px;
      background: linear-gradient(135deg, #4e73df, #1cc88a);
    }

    /* Ensure admin container doesn't get forced to center */
    .admin-container {
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <div class="admin-container">
    <h1 class="admin-title">ðŸ›  Admin Dashboard</h1>
    <p class="admin-welcome">Welcome, <strong><%= currentUser.firstName %></strong> (<%= currentUser.role %>)</p>

    <div class="table-wrapper">
      <table class="admin-table">
        <thead>
          <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td data-label="User ID">
                <a href="/users/edit-user/<%= user.userId %>" class="user-link"><%= user.userId %></a>
              </td>
              <td data-label="Name"><%= user.firstName %> <%= user.lastName %></td>
              <td data-label="Email"><%= user.email %></td>
              <td data-label="Role"><%= user.role %></td>
              <td data-label="Status"><%= user.accountStatus %></td>
              <td data-label="Created"><%= user.createdAt instanceof Date ? user.createdAt.toLocaleDateString() : 'N/A' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <a href="/users/profile" class="btn btn-back">â¬… Back to Profile</a>
  </div>
</body>
</html>
