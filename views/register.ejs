<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <style>
    /* =======================
       GLASS NEON FORM STYLE
       ======================= */
    body {
      margin: 0;
      padding: 40px;
      font-family: "Inter", Arial, sans-serif;
      background: linear-gradient(135deg, #0d1b2a, #1b263b, #415a77);
      color: #e5e9f0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }

    /* Back Button */
    .back-btn {
      position: absolute;
      top: 30px;
      left: 30px;
      color: white;
      padding: 10px 16px;
      border-radius: 10px;
      border: 1px solid rgba(255,255,255,0.25);
      backdrop-filter: blur(12px);
      text-decoration: none;
      font-size: 14px;
      transition: 0.25s ease;
    }

    .back-btn:hover {
      background: rgba(255,255,255,0.15);
      transform: scale(1.05);
    }

    .form-container {
      width: 400px;
      margin-top: 60px;
      background: rgba(255, 255, 255, 0.08);
      padding: 30px;
      border-radius: 15px;
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 0 25px rgba(0,0,0,0.4);
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .form-title {
      text-align: center;
      font-size: 1.8rem;
      margin-bottom: 20px;
      color: #4cc9f0;
      text-shadow: 0 0 10px rgba(76, 201, 240, 0.4);
    }

    .form-group {
      margin-bottom: 18px;
    }

    label {
      font-size: 14px;
      color: #a9bcd0;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-top: 6px;
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.3);
      background: rgba(0,0,0,0.2);
      color: #fff;
      font-size: 15px;
      transition: 0.2s ease;
    }

    input:focus {
      border-color: #4cc9f0;
      box-shadow: 0 0 10px rgba(76, 201, 240, 0.6);
      outline: none;
    }

    .btn {
      width: 100%;
      padding: 12px;
      background: #4cc9f0;
      color: #000;
      font-weight: bold;
      border-radius: 8px;
      cursor: pointer;
      border: none;
      transition: 0.25s ease;
      font-size: 16px;
      margin-top: 20px;
    }

    .btn:hover {
      background: #72e0ff;
      transform: scale(1.03);
    }

    /* Spacing between Turnstile and button */
.cf-turnstile {
  margin-top: 10px;
  display: flex;
  justify-content: center; /* center horizontally */
}


    .switch-link {
      margin-top: 15px;
      text-align: center;
      font-size: 14px;
      color: #e5e9f0;
    }

    .switch-link a {
      color: #4cc9f0;
      text-decoration: none;
    }

    /* Password criteria */
    .password-criteria p {
      margin: 3px 0;
      font-size: 13px;
      color: #ff6b6b;
    }

    .password-criteria p.valid {
      color: #4fe8b0;
    }

    /* Confirm match */
    #confirmStatus {
      margin-top: 5px;
      font-size: 13px;
    }

    #confirmStatus.valid {
      color: #4fe8b0;
    }

    #confirmStatus.invalid {
      color: #ff6b6b;
    }
  </style>
</head>

<body>

  <!-- Back button -->
  <a href="/users/login" class="back-btn">⬅ Back</a>

  <div class="form-container">
    <h1 class="form-title"><%= title %></h1>

    <form id="registerForm" action="/users/register" method="POST">

      <div class="form-group">
        <label>First Name</label>
        <input type="text" name="firstName" required>
      </div>

      <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="lastName" required>
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" required>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" id="password" name="password" required>

        <div class="password-criteria">
          <p id="length">● At least 8 characters</p>
          <p id="uppercase">● Uppercase letter</p>
          <p id="lowercase">● Lowercase letter</p>
          <p id="number">● Number</p>
          <p id="special">● Special character (!@#$%^&*)</p>
        </div>
      </div>

      <!-- CONFIRM PASSWORD -->
      <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" id="confirmPassword" required>
        <p id="confirmStatus"></p>
      </div>

      <!-- Turnstile -->
      <div class="cf-turnstile" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>

      <button type="submit" class="btn">Register</button>
    </form>

    <p class="switch-link">
      Already have an account? <a href="/users/login">Login here</a>
    </p>
  </div>

  <!-- Cloudflare Turnstile -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <script>
    const password = document.getElementById("password");
    const confirmPassword = document.getElementById("confirmPassword");
    const confirmStatus = document.getElementById("confirmStatus");

    const lengthC = document.getElementById("length");
    const upperC = document.getElementById("uppercase");
    const lowerC = document.getElementById("lowercase");
    const numberC = document.getElementById("number");
    const specialC = document.getElementById("special");

    const form = document.getElementById("registerForm");

    password.addEventListener("input", validatePassword);
    confirmPassword.addEventListener("input", validateConfirm);

    function validatePassword() {
      const v = password.value;

      lengthC.classList.toggle("valid", v.length >= 8);
      upperC.classList.toggle("valid", /[A-Z]/.test(v));
      lowerC.classList.toggle("valid", /[a-z]/.test(v));
      numberC.classList.toggle("valid", /[0-9]/.test(v));
      specialC.classList.toggle("valid", /[!@#$%^&*(),.?":{}|<>]/.test(v));
    }

    function validateConfirm() {
      if (confirmPassword.value === "") {
        confirmStatus.textContent = "";
        return;
      }

      if (confirmPassword.value === password.value) {
        confirmStatus.textContent = "Passwords match ✔";
        confirmStatus.className = "valid";
      } else {
        confirmStatus.textContent = "Passwords do not match ✖";
        confirmStatus.className = "invalid";
      }
    }

    form.addEventListener("submit", (e) => {
      const pass = password.value;
      const confirm = confirmPassword.value;

      const valid =
        pass.length >= 8 &&
        /[A-Z]/.test(pass) &&
        /[a-z]/.test(pass) &&
        /[0-9]/.test(pass) &&
        /[!@#$%^&*(),.?":{}|<>]/.test(pass);

      if (!valid) {
        e.preventDefault();
        alert("Password does not meet the requirements.");
        return;
      }

      if (pass !== confirm) {
        e.preventDefault();
        alert("Passwords do not match.");
      }
    });
  </script>

</body>
</html>
