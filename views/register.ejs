<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/register.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
  <!-- Back button -->
  <a href="/users/login" class="back-btn">⬅ Back</a>

  <div class="form-container">
    <h1 class="form-title"><%= title %></h1>

    <% if (message) { %>
      <div class="message message-<%= message.type %>">
        <i class="fas fa-<%= message.type === 'success' ? 'check-circle' : 'exclamation-circle' %>"></i>
        <%= message.text %>
      </div>
    <% } %>

    <form id="registerForm" action="/users/register" method="POST">

      <div class="form-group">
        <label>First Name</label>
        <input type="text" name="firstName" value="<%= formData?.firstName || '' %>" required>
      </div>

      <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="lastName" value="<%= formData?.lastName || '' %>" required>
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" value="<%= formData?.email || '' %>" required>
      </div>

      <div class="form-group">
        <label>Password</label>
        <div class="input-with-icon">
          <input type="password" id="password" name="password" required>
          <span class="password-toggle" id="togglePassword" title="Show password">
            <i class="fas fa-eye"></i>
          </span>
        </div>

        <div class="password-criteria">
          <p id="length">● At least 8 characters</p>
          <p id="uppercase">● Uppercase letter</p>
          <p id="lowercase">● Lowercase letter</p>
          <p id="number">● Number</p>
          <p id="special">● Special character (!@#$%^&*)</p>
        </div>
      </div>

      <!-- CONFIRM PASSWORD -->
      <div class="form-group">
        <label>Confirm Password</label>
        <div class="input-with-icon">
          <input type="password" id="confirmPassword" required>
          <span class="password-toggle" id="toggleConfirmPassword" title="Show password">
            <i class="fas fa-eye"></i>
          </span>
        </div>
        <p id="confirmStatus"></p>
      </div>

      <!-- Terms and Conditions -->
      <div class="form-group terms-group">
        <div class="terms-container">
          <input type="checkbox" id="terms" name="terms" required>
          <label for="terms">
            I agree to the 
            <a href="/terms" target="_blank" class="terms-link">Terms and Conditions</a>
            and 
            <a href="/privacy" target="_blank" class="terms-link">Privacy Policy</a>
          </label>
        </div>
        <p id="termsStatus" class="terms-status"></p>
      </div>

      <!-- Turnstile -->
      <div class="cf-turnstile" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>

      <button type="submit" class="btn">Register</button>
    </form>

    <p class="switch-link">
      Already have an account? <a href="/users/login">Login here</a>
    </p>
  </div>

  <!-- Cloudflare Turnstile -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <script>
    const password = document.getElementById("password");
    const confirmPassword = document.getElementById("confirmPassword");
    const confirmStatus = document.getElementById("confirmStatus");
    const termsCheckbox = document.getElementById("terms");
    const termsStatus = document.getElementById("termsStatus");
    const form = document.getElementById("registerForm");
    const togglePasswordBtn = document.getElementById("togglePassword");
    const toggleConfirmPasswordBtn = document.getElementById("toggleConfirmPassword");

    const lengthC = document.getElementById("length");
    const upperC = document.getElementById("uppercase");
    const lowerC = document.getElementById("lowercase");
    const numberC = document.getElementById("number");
    const specialC = document.getElementById("special");

    // Show/Hide Password Functions
    function togglePasswordVisibility(inputField, toggleBtn) {
      const type = inputField.getAttribute('type') === 'password' ? 'text' : 'password';
      inputField.setAttribute('type', type);
      
      // Toggle icon and title
      const icon = toggleBtn.querySelector('i');
      if (type === 'text') {
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
        toggleBtn.setAttribute('title', 'Hide password');
      } else {
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
        toggleBtn.setAttribute('title', 'Show password');
      }
    }

    // Event listeners for show/hide password
    togglePasswordBtn.addEventListener('click', (e) => {
      e.preventDefault();
      togglePasswordVisibility(password, togglePasswordBtn);
    });

    toggleConfirmPasswordBtn.addEventListener('click', (e) => {
      e.preventDefault();
      togglePasswordVisibility(confirmPassword, toggleConfirmPasswordBtn);
    });

    // Optional: Hide password when clicking outside (optional feature)
    document.addEventListener('click', (e) => {
      // Updated to use .password-toggle instead of .show-hide-toggle
      if (!e.target.closest('.password-toggle') && !e.target.closest('.password-toggle i')) {
        // Hide both passwords if they're visible
        if (password.type === 'text') {
          password.type = 'password';
          togglePasswordBtn.querySelector('i').classList.remove('fa-eye-slash');
          togglePasswordBtn.querySelector('i').classList.add('fa-eye');
          togglePasswordBtn.setAttribute('title', 'Show password');
        }
        
        if (confirmPassword.type === 'text') {
          confirmPassword.type = 'password';
          toggleConfirmPasswordBtn.querySelector('i').classList.remove('fa-eye-slash');
          toggleConfirmPasswordBtn.querySelector('i').classList.add('fa-eye');
          toggleConfirmPasswordBtn.setAttribute('title', 'Show password');
        }
      }
    });

    // Ensure the toggle buttons are clickable
    document.addEventListener('DOMContentLoaded', () => {
      togglePasswordBtn.style.pointerEvents = 'auto';
      toggleConfirmPasswordBtn.style.pointerEvents = 'auto';
    });

    password.addEventListener("input", validatePassword);
    confirmPassword.addEventListener("input", validateConfirm);
    termsCheckbox.addEventListener("change", validateTerms);

    function validatePassword() {
      const v = password.value;

      lengthC.classList.toggle("valid", v.length >= 8);
      upperC.classList.toggle("valid", /[A-Z]/.test(v));
      lowerC.classList.toggle("valid", /[a-z]/.test(v));
      numberC.classList.toggle("valid", /[0-9]/.test(v));
      specialC.classList.toggle("valid", /[!@#$%^&*(),.?":{}|<>]/.test(v));
    }

    function validateConfirm() {
      if (confirmPassword.value === "") {
        confirmStatus.textContent = "";
        confirmStatus.className = "";
        return;
      }

      if (confirmPassword.value === password.value) {
        confirmStatus.textContent = "Passwords match ✔";
        confirmStatus.className = "valid";
      } else {
        confirmStatus.textContent = "Passwords do not match ✖";
        confirmStatus.className = "invalid";
      }
    }

    function validateTerms() {
      if (termsCheckbox.checked) {
        termsStatus.textContent = "";
        termsStatus.className = "";
      } else {
        termsStatus.textContent = "You must accept the terms and conditions";
        termsStatus.className = "invalid";
      }
    }

    form.addEventListener("submit", (e) => {
      // Password validation
      const pass = password.value;
      const confirm = confirmPassword.value;

      const isPasswordValid =
        pass.length >= 8 &&
        /[A-Z]/.test(pass) &&
        /[a-z]/.test(pass) &&
        /[0-9]/.test(pass) &&
        /[!@#$%^&*(),.?":{}|<>]/.test(pass);

      if (!isPasswordValid) {
        e.preventDefault();
        alert("Password does not meet the requirements.");
        return;
      }

      // Password match validation
      if (pass !== confirm) {
        e.preventDefault();
        alert("Passwords do not match.");
        return;
      }

      // Terms validation
      if (!termsCheckbox.checked) {
        e.preventDefault();
        termsStatus.textContent = "You must accept the terms and conditions";
        termsStatus.className = "invalid";
        termsCheckbox.focus();
        alert("Please accept the terms and conditions to continue.");
        return;
      }

      // If all validations pass, form will submit normally
    });

    // Validate form on page load (for error states)
    document.addEventListener("DOMContentLoaded", () => {
      validatePassword();
      validateConfirm();
      validateTerms();
    });
  </script>

</body>
</html>