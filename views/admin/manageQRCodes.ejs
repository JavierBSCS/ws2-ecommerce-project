<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/admin.css">
    <link rel="stylesheet" href="/shared.css">
    <link rel="stylesheet" href="/manageQRCodes.css">

</head>
<body>
      <div class="app">
    <!-- Sidebar Menu -->
    <div class="sidebar" id="sidebar">
      <a href="/users/dashboard" class="dashboard-title">
        <h2>Dashboard</h2>
      </a>
      <a href="/users/profile">üë§ Profile</a>
      <a href="/users/orders/history">üõí My Orders</a>
      <% if (currentUser && currentUser.role === "admin") { %>
        <h3>Admin Tools</h3>
        <a href="/users/admin/products/add">‚ûï Add Product</a>
        <a href="/users/admin/products">üì¶ Manage Products</a>
        <a href="/users/admin/users">üë• Manage Users</a>
        <a href="/users/admin/reactivation-requests">üîî Reactivation Requests</a>
        <a href="/users/admin/qr-codes" class="active">üì± Manage QR Codes</a>
        <a href="/admin/reports/sales">üìä Sales Reports</a>
      <% } %>
      <a href="/users/logout">üö™ Logout</a>
    </div>

    <!-- Menu Toggle Button -->
    <button id="menuToggle" class="menu-toggle">‚ò∞ Menu</button>

    <!-- MAIN CONTENT AREA -->
    <div class="profile-container" id="mainContent">
        <div class="admin-container">
            <div class="qr-management-container">
                <a href="javascript:history.back()" class="back">Go Back</a>
                
                <h1 class="admin-title">üì± Manage GCash QR Codes</h1>
                
                <% if (req.query && req.query.success === '1') { %>
                    <div class="success-message">
                        ‚úÖ QR code uploaded successfully!
                    </div>
                <% } %>
                
                <% if (req.query && req.query.deleted === '1') { %>
                    <div class="success-message">
                        ‚úÖ QR code deleted successfully!
                    </div>
                <% } %>

                <% if (req.query && req.query.saved === '1') { %>
                    <div class="success-message">
                        ‚úÖ Phone number updated successfully!
                    </div>
                <% } %>

                <div class="qr-section">
                    <h2 class="section-title">Current QR Code</h2>
                    
                    <% if (qrCodeImage) { %>
                        <div class="current-qr">
                            <img src="<%= qrCodeImage %>" alt="Current GCash QR Code" class="qr-image">
                            <p style="color: var(--text-muted); margin-top: 15px;">
                                This QR code is currently displayed to customers during checkout.
                            </p>
                        </div>
                        
                        <form method="POST" action="/users/admin/qr-codes/delete" style="text-align: center;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete the QR code?')">
                                üóëÔ∏è Delete QR Code
                            </button>
                        </form>
                    <% } else { %>
                        <div class="current-qr">
                            <p style="color: var(--text-muted); font-size: 1.1rem;">No QR code uploaded yet.</p>
                            <p style="color: var(--text-muted);">Customers will see a placeholder until you upload a QR code.</p>
                        </div>
                    <% } %>
                </div>

                <div class="qr-section">
                    <h2 class="section-title">GCash Payment Details</h2>
                    <form class="upload-form" method="POST" action="/users/admin/qr-codes/save-details">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="gcashNumber">GCash Phone Number:</label>
                                <input type="tel" 
                                       id="gcashNumber" 
                                       name="gcashNumber" 
                                       value="<%= gcashNumber || '0917 123 4567' %>" 
                                       placeholder="0917 123 4567"
                                       pattern="[0-9\s]{11,13}"
                                       required>
                                <small style="color: var(--text-muted); display: block; margin-top: 5px;">
                                    Format: 0917 123 4567 (with or without spaces)
                                </small>
                            </div>
                            
                            <div class="form-group">
                                <label>Current Display:</label>
                                <div class="phone-display" id="phonePreview">
                                    <%= gcashNumber || '0917 123 4567' %>
                                </div>
                                <small style="color: var(--text-muted);">
                                    This is how it appears to customers
                                </small>
                            </div>
                        </div>

                        <div style="text-align: center; margin-top: 20px;">
                            <button type="submit" class="btn btn-save">
                                üíæ Save Phone Number
                            </button>
                        </div>
                    </form>
                </div>

                <div class="qr-section">
                    <h2 class="section-title">Upload New QR Code</h2>
                    <form class="upload-form" method="POST" action="/users/admin/qr-codes/upload" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="qrCodeImage">Select QR Code Image:</label>
                            <input type="file" id="qrCodeImage" name="qrCodeImage" accept="image/*" required>
                            <small style="color: var(--text-muted); display: block; margin-top: 5px;">
                                Supported formats: JPG, PNG, GIF. Max size: 5MB
                            </small>
                        </div>
                        
                        <div class="instructions">
                            <strong style="color: var(--accent-blue);">üí° Tips for QR Codes:</strong>
                            <ul style="color: var(--text-light); margin: 10px 0 0 20px;">
                                <li>Use a clear, high-quality image of your GCash QR code</li>
                                <li>Ensure the QR code is square and not distorted</li>
                                <li>Test the QR code with your phone before uploading</li>
                                <li>Recommended size: 300x300 pixels minimum</li>
                            </ul>
                        </div>
                        
                        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                            <button type="submit" class="btn btn-primary">üì§ Upload QR Code</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END OF MAIN CONTENT -->
        </div>

    <script>
        // Real-time phone number preview
        document.getElementById('gcashNumber').addEventListener('input', function(e) {
            document.getElementById('phonePreview').textContent = e.target.value || '0917 123 4567';
        });

        // Format phone number as user types
        document.getElementById('gcashNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, ''); // Remove non-digits
            if (value.length > 11) value = value.substring(0, 11); // Limit to 11 digits
            
            // Format as 0917 123 4567
            if (value.length > 4) {
                value = value.substring(0, 4) + ' ' + value.substring(4);
            }
            if (value.length > 8) {
                value = value.substring(0, 8) + ' ' + value.substring(8);
            }
            
            e.target.value = value;
        });

        // Auto-focus on phone number field if empty
        document.addEventListener('DOMContentLoaded', function() {
            const phoneInput = document.getElementById('gcashNumber');
            if (phoneInput.value === '0917 123 4567') {
                phoneInput.select();
            }
        });
    </script>
    
  <!-- Sidebar JavaScript -->
  <script>
    // Shared sidebar functionality
    const sidebar = document.getElementById('sidebar');
    const menuToggle = document.getElementById('menuToggle');
    const mainContent = document.getElementById('mainContent');

    console.log('Sidebar elements check:', {
      sidebar: sidebar ? 'Found' : 'Missing',
      menuToggle: menuToggle ? 'Found' : 'Missing',
      mainContent: mainContent ? 'Found' : 'Missing'
    });

    function updateTogglePosition() {
      if (sidebar.classList.contains('hidden')) {
        menuToggle.classList.add('shift-left');
        menuToggle.textContent = '‚ò∞ Show Menu';
        if (mainContent) {
          mainContent.style.marginLeft = '0';
          mainContent.style.width = '100%';
        }
      } else {
        menuToggle.classList.remove('shift-left');
        menuToggle.textContent = '‚ò∞ Hide Menu';
        if (mainContent) {
          mainContent.style.marginLeft = '250px';
          mainContent.style.width = 'calc(100% - 250px)';
        }
      }
    }

    function toggleMenu() {
      sidebar.classList.toggle('hidden');
      updateTogglePosition();
      
      // Save sidebar state in localStorage
      const isHidden = sidebar.classList.contains('hidden');
      localStorage.setItem('sidebarHidden', isHidden);
      
      console.log('Menu toggled. Hidden:', isHidden);
    }

    menuToggle.addEventListener('click', toggleMenu);
    
    // Initialize positions and load saved state
    function initializeSidebar() {
      const savedState = localStorage.getItem('sidebarHidden');
      if (savedState === 'true') {
        sidebar.classList.add('hidden');
      }
      updateTogglePosition();
    }

    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', initializeSidebar);
  </script>
</body>
</html>