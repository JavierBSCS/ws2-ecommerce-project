<script>
  // Toggle user status functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Get all status toggle switches
    const statusToggles = document.querySelectorAll('.toggle-status');
    
    // Add change event listener to each toggle
    statusToggles.forEach(toggle => {
      toggle.addEventListener('change', function() {
        const userId = this.getAttribute('data-user-id');
        const newStatus = this.checked ? 'active' : 'inactive';
        
        // Show loading state
        const originalState = this.checked;
        this.disabled = true;
        
        // Send AJAX request to update status
        updateUserStatus(userId, newStatus, this);
      });
    });
    

async function updateUserStatus(userId, newStatus, toggleElement) {
  try {
    const response = await fetch(`/users/admin/users/toggle-status/${userId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      }
      // NO BODY - server toggles internally
    });
    
    const data = await response.json();
    
    if (data.success) {
      // Success - update UI
      showNotification(data.message || 'User status updated successfully!', 'success');
      
      // Update the status badge
      const row = toggleElement.closest('tr');
      const statusBadge = row.querySelector('.badge-active, .badge-inactive');
      
      if (statusBadge) {
        // Use the newStatus returned from server (data.newStatus)
        const updatedStatus = data.newStatus;
        statusBadge.className = `badge badge-${updatedStatus}`;
        statusBadge.innerHTML = `<i class="fas fa-${updatedStatus === 'active' ? 'check-circle' : 'times-circle'}"></i> ${updatedStatus}`;
        
        // Update the toggle to match the actual new status from server
        toggleElement.checked = updatedStatus === 'active';
      }
      
    } else {
      // Error - revert toggle
      toggleElement.checked = !toggleElement.checked;
      showNotification(data.error || 'Failed to update status', 'error');
    }
    
  } catch (error) {
    console.error('Error updating user status:', error);
    // Revert toggle on error
    toggleElement.checked = !toggleElement.checked;
    showNotification('Network error. Please try again.', 'error');
  } finally {
    // Re-enable the toggle
    toggleElement.disabled = false;
  }
}
    // Function to show notification
    function showNotification(message, type) {
      // Remove existing notifications
      const existingNotification = document.querySelector('.status-notification');
      if (existingNotification) {
        existingNotification.remove();
      }
      
      // Create notification element
      const notification = document.createElement('div');
      notification.className = `status-notification message message-${type}`;
      notification.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
        ${message}
      `;
      
      // Add to page
      const container = document.querySelector('.manage-users-container');
      const pageHeader = document.querySelector('.page-header');
      container.insertBefore(notification, pageHeader.nextSibling);
      
      // Auto-remove after 5 seconds
      setTimeout(() => {
        notification.style.opacity = '0';
        notification.style.transform = 'translateY(-10px)';
        setTimeout(() => notification.remove(), 300);
      }, 5000);
    }
    
