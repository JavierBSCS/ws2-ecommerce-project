        <link rel="stylesheet" href="/manageUsers.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <div class="app">
    <!-- Sidebar Menu -->
    <div class="sidebar" id="sidebar">
      <a href="/users/dashboard" class="dashboard-title">
        <h2>Dashboard</h2>
      </a>
      <a href="/users/profile">ðŸ‘¤ Profile</a>
      <a href="/users/orders/history">ðŸ›’ My Orders</a>
      <% if (currentUser && currentUser.role === "admin") { %>
        <h3>Admin Tools</h3>
        <a href="/users/admin/products/add">âž• Add Product</a>
        <a href="/users/admin/products">ðŸ“¦ Manage Products</a>
        <a href="/users/admin/users" class="active">ðŸ‘¥ Manage Users</a>
        <a href="/users/admin/reactivation-requests">ðŸ”” Reactivation Requests</a>
        <a href="/users/admin/qr-codes">ðŸ“± Manage QR Codes</a>
        <a href="/admin/reports/sales">ðŸ“Š Sales Reports</a>
      <% } %>
      <a href="/users/logout">ðŸšª Logout</a>
    </div>

    <!-- Menu Toggle Button -->
    <button id="menuToggle" class="menu-toggle">â˜° Menu</button>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
      <div class="manage-users-container">
        <!-- Page Header -->
        <div class="page-header">
          <h1><i class="fas fa-users"></i> Manage Users</h1>
            <div class="header-actions">
            <a href="/users/dashboard" class="btn btn-outline pulse">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (message) { %>
          <div class="message message-<%= message.type === 'success' ? 'success' : 'error' %>">
            <i class="fas fa-<%= message.type === 'success' ? 'check-circle' : 'exclamation-circle' %>"></i>
            <%= message.text %>
          </div>
        <% } %>

        <!-- Stats Cards -->
        <div class="stats-cards">
          <div class="stat-card total">
            <h3>Total Users</h3>
            <div class="count"><%= stats.total %></div>
          </div>
          <div class="stat-card admin">
            <h3>Admins</h3>
            <div class="count"><%= stats.admin %></div>
          </div>
          <div class="stat-card customer">
            <h3>Customers</h3>
            <div class="count"><%= stats.customer %></div>
          </div>
          <div class="stat-card active">
            <h3>Active</h3>
            <div class="count"><%= stats.active %></div>
          </div>
          <div class="stat-card inactive">
            <h3>Inactive</h3>
            <div class="count"><%= stats.inactive %></div>
          </div>
          <div class="stat-card verified">
            <h3>Verified</h3>
            <div class="count"><%= stats.verified %></div>
          </div>
        </div>

        <!-- Filters -->
        <div class="filters-container">
          <form method="GET" class="filters-form">
            <div class="filter-group">
              <label for="searchName"><i class="fas fa-search"></i> Search</label>
              <input 
                type="text" 
                id="searchName" 
                name="searchName" 
                placeholder="Search by name or email..." 
                value="<%= searchName %>"
              >
            </div>
            <div class="filter-group">
              <label for="searchRole"><i class="fas fa-user-tag"></i> Role</label>
              <select id="searchRole" name="searchRole">
                <option value="">All Roles</option>
                <option value="admin" <%= searchRole === 'admin' ? 'selected' : '' %>>Admin</option>
                <option value="customer" <%= searchRole === 'customer' ? 'selected' : '' %>>Customer</option>
              </select>
            </div>
            <div class="filter-group">
              <label for="searchStatus"><i class="fas fa-filter"></i> Status</label>
              <select id="searchStatus" name="searchStatus">
                <option value="">All Status</option>
                <option value="active" <%= searchStatus === 'active' ? 'selected' : '' %>>Active Only</option>
                <option value="inactive" <%= searchStatus === 'inactive' ? 'selected' : '' %>>Inactive Only</option>
                <option value="verified" <%= searchStatus === 'verified' ? 'selected' : '' %>>Verified Only</option>
                <option value="unverified" <%= searchStatus === 'unverified' ? 'selected' : '' %>>Unverified Only</option>
              </select>
            </div>
<div class="filter-buttons">
  <button type="submit" class="btn btn-primary">
    <i class="fas fa-filter"></i> Apply Filters
  </button>
  <a href="/users/admin/users" class="btn btn-outline">
    <i class="fas fa-redo"></i> Reset
  </a>
</div>
          </form>
        </div>

        <!-- Users Table -->
        <div class="users-table-container">
          <div class="table-responsive">
            <table class="users-table">
              <thead>
                <tr>
                  <th>User <i class="fas fa-user"></i></th>
                  <th>Role <i class="fas fa-tag"></i></th>
                  <th>Status <i class="fas fa-signal"></i></th>
                  <th>Verified <i class="fas fa-check-circle"></i></th>
                  <th>Created <i class="fas fa-calendar-plus"></i></th>
                  <th>Actions <i class="fas fa-cogs"></i></th>
                </tr>
              </thead>
              <tbody>
                <% if (users && users.length > 0) { %>
                  <% users.forEach(user => { %>
                    <tr class="<%= highlightedUser === user.userId ? 'highlighted' : '' %>" id="user-<%= user.userId %>">
                      <td>
                        <div class="user-info">
                          <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>" alt="Avatar" class="user-avatar">
                          <% } else { %>
                            <div class="user-avatar">
                              <%= user.firstName?.charAt(0) || 'U' %>
                            </div>
                          <% } %>
                          <div class="user-details">
                            <h4><%= user.firstName %> <%= user.lastName %></h4>
                            <p><i class="fas fa-envelope"></i> <%= user.email %></p>
                            <% if (user.phone) { %>
                              <p><i class="fas fa-phone"></i> <%= user.phone %></p>
                            <% } %>
                          </div>
                        </div>
                      </td>
                      <td>
                        <span class="badge badge-<%= user.role %>">
                          <i class="fas fa-<%= user.role === 'admin' ? 'crown' : 'user' %>"></i>
                          <%= user.role %>
                        </span>
                      </td>
                      <td>
                        <span class="badge badge-<%= user.accountStatus %>">
                          <i class="fas fa-<%= user.accountStatus === 'active' ? 'check-circle' : 'times-circle' %>"></i>
                          <%= user.accountStatus %>
                        </span>
                        <br>
                        <small>
                          <label class="status-toggle">
                            <input 
                              type="checkbox" 
                              class="toggle-status" 
                              data-user-id="<%= user.userId %>"
                              <%= user.accountStatus === 'active' ? 'checked' : '' %>
                              <%= currentUser.userId === user.userId ? 'disabled' : '' %>
                            >
                            <span class="slider"></span>
                          </label>
                        </small>
                      </td>
                      <td>
                        <span class="badge badge-<%= user.isEmailVerified ? 'verified' : 'unverified' %>">
                          <i class="fas fa-<%= user.isEmailVerified ? 'check-circle' : 'times-circle' %>"></i>
                          <%= user.isEmailVerified ? 'Verified' : 'Unverified' %>
                        </span>
                      </td>
                      <td>
                        <small>
                          <i class="fas fa-calendar"></i> <%= new Date(user.createdAt).toLocaleDateString() %>
                        </small>
                        <br>
                        <small class="text-muted">
                          <i class="fas fa-clock"></i> <%= new Date(user.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                        </small>
                      </td>
                      <td>
                        <div class="action-buttons">
                        <a href="/users/admin/users/edit/<%= user.userId %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <% if (currentUser.userId !== user.userId) { %>
                            <a 
                            href="/users/admin/users/delete/<%= user.userId %>" 
                            class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete <%= user.firstName %> <%= user.lastName %>?')"
                            >
                            <i class="fas fa-trash"></i> Delete
                            </a>
                        <% } else { %>
                            <span class="btn btn-secondary btn-sm disabled">
                            <i class="fas fa-user-shield"></i> Current
                            </span>
                        <% } %>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <!-- In your manageUsers.ejs file, update the no results section: -->
                <% } else { %>
                <tr>
                    <td colspan="6">
                    <div class="no-results">
                        <i class="fas fa-users-slash"></i>
                        <h3>No users found</h3>
                        <p>Try adjusting your search filters or resetting to view all users.</p>
                        <a href="/users/admin/users" class="btn">
                        <i class="fas fa-redo"></i> Reset Filters
                        </a>
                    </div>
                    </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
