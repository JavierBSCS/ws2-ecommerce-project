<h1>Your Cart</h1>

<% if (cart.length === 0) { %>
  <p>Your cart is empty.</p>
<% } else { %>

  <table border="1" cellpadding="8">
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Qty</th>
    </tr>

    <% cart.forEach(item => { %>
      <tr>
        <td><%= item.name %></td>
        <td>$<%= item.price %></td>
        <td><%= item.qty %></td>
      </tr>
    <% }) %>
  </table>

  <a href="/cart/checkout">Proceed to Checkout</a>

<% } %>
