<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/login.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>

  <!-- Back Button -->
  <a href="/" class="back-btn">‚¨Ö Back</a>

  <div class="login-container">

    <h1 class="title">Login</h1>

    <!-- Error Message Display -->
    <% if (error) { %>
      <div class="message error">
        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
          <i class="fas fa-exclamation-triangle"></i>
          <span style="flex: 1;"><%= error.replace(/<[^>]*>/g, '').replace(/‚ö†Ô∏è\s*/, '') %></span>
        </div>
        
        <% if (error.includes('inactive')) { %>
          <div style="text-align: center; margin-top: 10px;">
            <% const emailMatch = error.match(/showReactivationModal\('([^']+)'\)/); %>
            <% if (emailMatch && emailMatch[1]) { %>
              <button type="button" onclick="showReactivationModal('<%= emailMatch[1] %>')" 
                      class="btn btn-secondary" style="margin-top: 10px; background: #4cc9f0; color: #000; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer;">
                <i class="fas fa-user-check"></i> Request Reactivation
              </button>
            <% } %>
          </div>
        <% } %>
      </div>
    <% } %>

    <% if (expired) { %>
      <div class="message expired">‚ö†Ô∏è Your session has expired. Please login again.</div>
    <% } %>

    <% if (logout) { %>
      <div class="message logout">‚úÖ You have been logged out successfully.</div>
    <% } %>

    <% if (reset) { %>
      <div class="message reset">üîë Your password has been reset. Please log in with your new password.</div>
    <% } %>

    <form action="/users/login" method="POST">

      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" placeholder="Enter your email" required>
      </div>

      <div class="form-group">
        <label>Password</label>
        <div class="input-with-icon">
          <input type="password" name="password" id="password" placeholder="Enter your password" required>
          <span class="password-toggle" id="togglePassword" title="Show password">
            <i class="fas fa-eye"></i>
          </span>
        </div>
      </div>

      <p class="forgot-link"><a href="/password/forgot">Forgot Password?</a></p>

      <!-- Cloudflare Turnstile -->
      <div class="cf-turnstile" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>

      <button type="submit" class="btn">Login</button>
    </form>

    <p class="register-link">
      Don't have an account? <a href="/users/register">Register here</a>
    </p>

  </div>

  <!-- Turnstile Script -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <!-- Reactivation Modal -->
  <div id="reactivationModal" class="modal" style="display: none;">
    <div class="modal-content">
      <h3><i class="fas fa-user-slash"></i> Account Inactive</h3>
      <p>Your account has been deactivated. Would you like to request reactivation?</p>
      
      <form id="reactivationForm">
        <div class="form-group">
          <label for="reactivationEmail">Your Email</label>
          <input type="email" id="reactivationEmail" name="email" required readonly>
        </div>
        
        <div class="form-group">
          <label for="reactivationReason">Reason for Reactivation (Optional)</label>
          <textarea id="reactivationReason" name="reason" 
                    placeholder="Please tell us why you'd like to reactivate your account..."
                    rows="3"></textarea>
        </div>
        
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="closeReactivationModal()">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Send Reactivation Request
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Password toggle functionality
    const passwordInput = document.getElementById('password');
    const togglePasswordBtn = document.getElementById('togglePassword');

    function togglePasswordVisibility() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      
      // Toggle icon and title
      const icon = togglePasswordBtn.querySelector('i');
      if (type === 'text') {
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
        togglePasswordBtn.setAttribute('title', 'Hide password');
      } else {
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
        togglePasswordBtn.setAttribute('title', 'Show password');
      }
    }

    // Event listener for show/hide password
    togglePasswordBtn.addEventListener('click', (e) => {
      e.preventDefault();
      togglePasswordVisibility();
    });

    // Optional: Hide password when clicking outside
    document.addEventListener('click', (e) => {
      // Change from '.show-hide-toggle' to '.password-toggle'
      if (!e.target.closest('.password-toggle') && !e.target.closest('.password-toggle i')) {
        if (passwordInput.type === 'text') {
          passwordInput.type = 'password';
          togglePasswordBtn.querySelector('i').classList.remove('fa-eye-slash');
          togglePasswordBtn.querySelector('i').classList.add('fa-eye');
          togglePasswordBtn.setAttribute('title', 'Show password');
        }
      }
    });

    // Also add pointer-events to make sure it's clickable
    document.addEventListener('DOMContentLoaded', () => {
      // Ensure the toggle button is clickable
      togglePasswordBtn.style.pointerEvents = 'auto';
    });

    // Reactivation Modal Functions
    function showReactivationModal(email) {
      document.getElementById('reactivationEmail').value = email;
      document.getElementById('reactivationModal').style.display = 'flex';
    }

    function closeReactivationModal() {
      document.getElementById('reactivationModal').style.display = 'none';
      document.getElementById('reactivationForm').reset();
    }

    // Handle form submission
    document.getElementById('reactivationForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const email = document.getElementById('reactivationEmail').value;
      const reason = document.getElementById('reactivationReason').value;
      
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerHTML;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
      submitBtn.disabled = true;
      
      try {
        const response = await fetch('/users/request-reactivation', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email, reason })
        });
        
        const data = await response.json();
        
        if (data.success) {
          alert('‚úÖ Reactivation request sent! Admin will review it shortly.');
          closeReactivationModal();
        } else {
          alert('‚ùå ' + data.message);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('‚ùå Network error. Please try again.');
      } finally {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
      }
    });

    // Close modal when clicking outside
    document.getElementById('reactivationModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeReactivationModal();
      }
    });
  </script>
</body>
</html>